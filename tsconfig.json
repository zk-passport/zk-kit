{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types", "types"],
        "paths": {
            "@zk-kit/*": ["packages/*/src"],
            "@openpassport/zk-kit-utils/*": ["packages/zk-kit-utils/src"],
            "@openpassport/zk-kit-lean-imt/*": ["packages/zk-kit-lean-imt/src"],
            "@openpassport/zk-kit-imt/*": ["packages/zk-kit-imt/src"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "target": "esnext",
            "module": "commonjs"
        }
    }
}
